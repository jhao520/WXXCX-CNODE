/**index.wxss**/
@import "../../weui.wxss";
@import "../../iconfont.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.slide-image {
  width: 100%;
}

.weui-panel {
  margin-top: 0;
}

.weui-panel__hd .weui-media-box__info {
  display: flex;
  font-size: 16px;
}

.weui-panel__hd .weui-media-box__info li {
  padding: 15px 0;
}

.weui-media-box__info {
  margin: 0;
  padding-bottom: 0;
}

.weui-media-box__info li {
  flex: 1;
  text-align: center;
}

.weui-cell__bd {
  text-align: center;
}

.weui-media-box_appmsg .weui-media-box__hd {
  margin-right: 0.8em;
  width: 60px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  overflow: hidden;
}

.weui-media-box__hd image {
  width: 100%;
  height: 100%;
}

.weui-media-box_appmsg .weui-media-box__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}

.sign {
  display: inline-block;
  vertical-align: 3px;
}

.put_good, .put_top {
  background: #80bd01;
  padding: 2px 4px;
  border-radius: 3px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -o-border-radius: 3px;
  color: #fff;
  font-size: 12px;
}

.topiclist-tab {
  background-color: #e5e5e5;
  color: #999;
  padding: 2px 4px;
  border-radius: 3px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -o-border-radius: 3px;
  font-size: 12px;
}

.weui-media-box__info {
  /* padding-bottom: 5px; */
  font-size: 13px;
  color: #cecece;
  line-height: 1em;
  list-style: none;
  overflow: hidden;
}

.weui-media-box__info__meta {
  display: block;
  line-height: 1.5;
  width: 90%;
}

.count {
  font-size: 11px;
  float: left;
  text-align: left;
  margin-right: 20px;
}

.count:before {
  vertical-align: 0;
  font-size: 9px;
  margin-right: 3px;
}

.fr {
  float: right;
  margin-right: 0px;
}

.tabSelected {
  border-bottom: 3px solid #f60;
  color: #f60;
}
